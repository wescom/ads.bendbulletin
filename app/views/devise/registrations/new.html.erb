<h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>

	<div class="well well-small controls controls-row">
		<ul class="unstyled inline">
			<li><%= f.input :email, :autofocus => true, :required => true %></li>
			<li class="text-warning">email address is used to login</li>
		</ul>
	  <%= f.input :password, :required => true %>
	  <%= f.input :password_confirmation, :required => true %>
	</div>

	<div class="well well-small controls controls-row">
		<div class="span3">
		  <label>Name:</label><%= f.text_field :name, :required => true %>
			<label>Company:</label><%= f.text_field :company %>
			<label>Account #:</label><%= f.text_field :acct_no %>
		</div>
		<div class="span2">
			<label>Phone Numbers:</label><%= f.text_field :phonenum, :size => 12, :maxlength => 12, :class=>"input-medium" %>
			<%= f.text_field :phonenum2, :size => 12, :maxlength => 12, :class=>"input-medium" %>
			<label>Fax #:</label><%= f.text_field :fax, :size => 12, :maxlength => 12, :class=>"input-medium" %>
		</div>
		<div class="span6">
			<div class="form-horizontal">
				<div class="control-group">
						<label class="control-label" for="address1">Street Address:</label>
						<div class="controls"><%= f.text_field :address1 %></div>
				</div>
				<div class="control-group">
					<label class="control-label" for="address2">Address2 or PO:</label>
					<div class="controls"><%= f.text_field :address2 %></div>
			  </div>				
				<div class="control-group">
					<label class="control-label" for="city">City/State/Zip:</label>
					<div class="controls">
						<%= f.text_field :city, :size => 20, :maxlength => 20, :class=>"input-medium" %>
						<%= f.text_field :state, :size => 2, :maxlength => 2, :class=>"input-mini" %>
						<%= f.text_field :zip, :size => 5, :maxlength => 5, :class=>"input-mini" %>
					</div>
			  </div>
			</div>
		</div>
	</div>

  <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
