<div id="jobs-page">
	<div id="page-content" class="clearfix">
		<h1>
			All Jobs
			<div class="pull-right">
				<%= form_tag jobs_path , :method => :get do %>
					<table cellspacing="0" cellpadding="0">
						<tbody>
							<td class="medium">
								<td><%= search_field_tag :search_query, params[:search_query], :placeholder => "search users", :autofocus => true %></td>
							<td>&nbsp;&nbsp;</td>
							<td class="smaller"><%= submit_tag "Search", :class => 'submit'%></td>
						</tbody>
					</table>
				<% end %>
			</div>
		</h1>

		<div class="inner-box clearfix">
		  <div id="form-block" class="grid_15">
			  <% if @jobs %>
			    <div id="table-block" class="grid_15">
			      <% unless @jobs.nil? %>
			        <table class="table table-bordered table-hover table-condensed">
			          <tbody>
			            <thead>
										<tr>
				              <th><div class="text-center">Job #</div></th>
				              <th><div class="text-center">Upload Type</div></th>
				              <th><div>Name</div></th>
				              <th><div>Company<div></th>
				              <th><div class="text-center"</div>Uploaded</div></th>
				              <th><div class="text-center">Action</div></th>
										</tr>
			            </thead>
			            <%= render :partial => 'table_row', :collection => @jobs %>
			          </tbody>
				      </table>
							<div id="table-paginate">
				      	<div class="pull-right"><%= will_paginate @jobs, :class => "pagination-small" %></div>
							</div>
			      <% end %>
			    </div>
			  <% end %>
			</div>
		</div>
	</div>
</div>