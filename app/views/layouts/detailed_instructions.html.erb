<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Detailed Upload Instructions" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Detailed Upload Instructions" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
		<%= render 'layouts/header_no_links' %>
    <div id="main" role="main">
      <div class="container-fluid">
        <div class="content">
           <div class="row-fluid">
            <div class="span12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
